<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <!-- autowired by name -->
    <bean id="employee_service" class="com.kunitskaya.service.module4.EmployeeService" autowire="byName"/>
    <bean id="employee" class="com.kunitskaya.domain.module4.Employee">
        <property name="name" value="Sam"/>
    </bean>

    <!-- autowired by type -->
    <bean id="salary_service" class="com.kunitskaya.service.module4.SalaryService" autowire="byType"/>
    <bean id="salary_to_autowire" class="com.kunitskaya.domain.module4.Salary">
        <property name="amount" value="900"/>
    </bean>

</beans>